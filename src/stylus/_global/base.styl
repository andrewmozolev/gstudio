html
  box-sizing border-box
  min-width break-mobile


*,
*::before,
*::after
  box-sizing inherit


.container
  margin 0 auto
  min-width break-mobile
  max-width break-desktop
  padding-left offset-mobile
  padding-right offset-mobile

  @media tablet
    padding-left offset-tablet
    padding-right offset-tablet

  &--footer
    padding-left offset-footer-mobile
    padding-right offset-footer-mobile

    @media tablet
      padding-left offset-footer-tablet
      padding-right offset-footer-tablet

    @media laptop
      padding-left offset-footer-laptop
      padding-right offset-footer-laptop

    @media desktop
      padding-left offset-footer-desktop
      padding-right offset-footer-desktop

body
  background-color #fff
  font-family Geometria, Arial, sans-serif
  font-style normal
  font-size: fz_base;
  font-weight 400
  line-height 1.5
  color: #000;

.background-video
  // position fixed
  z-index 1
  width 100%
  height 100%
  // background linear-gradient(135deg, red, blue)
  background-color #fff

main
  z-index 100
  position relative

