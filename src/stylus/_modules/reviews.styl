.reviews
  position relative
  height 372px
  margin-bottom 30px
  overflow hidden
  background-color #fff

  &--touch
    overflow-x scroll

  @media tablet
    height 517px
    margin-bottom 50px

  @media laptop
    height 537px
    margin-bottom 90px

  @media desktop
    margin-bottom 120px


  &__wrap
    position absolute
    z-index 10
    display flex
    padding-left 20px
    padding-right 20px
    padding-top 30px
    padding-bottom 30px
    transition left 0.3s ease-out

    @media tablet
      padding-top 80px
      padding-left 30px
      padding-right 30px

    @media laptop
      padding-top 100px
      padding-left 60px
      padding-right 60px


  &__item
    display flex
    flex-shrink 0
    width 220px
    margin-right 30px

    &:last-child
      margin-right 0

    @media tablet
      width 250px
      margin-right 80px

    @media laptop
      margin-right 140px

    @media desktop
      margin-right 170px

