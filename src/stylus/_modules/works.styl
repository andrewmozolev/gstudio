.works
  width 100%


  &__title
    width 240px
    margin 0 auto
    margin-bottom 30px
    text-align center
    text-transform uppercase
    font-weight 300
    font-size fz_small
    line-height calc(22/16)
    letter-spacing 2.33px

    @media tablet
      width auto
      font-size fz_xxmedium
      line-height calc(62/24)
      letter-spacing 3.5px

    @media desktop
      font-size fz_large
      line-height calc(62/36)
      letter-spacing 5.25px


  &__item
    width 50%
    overflow hidden

    @media tablet
      width calc(100%/3)

    @media laptop

      &:hover
        & .works__img
          filter blur(15px)

        & .works__content
          visibility visible
          opacity 1
          background-color rgba(255,255,255,0.8)

    &::after
      content ''
      display block
      padding-bottom 100%

    &--double::after
      padding-bottom 200%


  &__content
    position absolute
    z-index 2
    top 0
    left 0
    bottom 0
    right 0
    color #000
    transition all 0.2s ease-in-out

    @media laptop
      visibility hidden
      opacity 0
      text-align center
      padding-top 81px

    @media desktop
      padding-top 153px


  &__inner
    @media laptop
      position absolute
      top 50%
      left 50%
      transform translate(-50%, -50%)


  &__name
    position absolute
    z-index 2
    top 14px
    left 10px
    color #fff
    font-weight 500
    font-size fz_xsmall
    line-height calc(16/14)

    @media tablet
      font-size fz_base
      line-height calc(22/18)

    @media laptop
      margin-bottom 40px
      position static
      font-size fz_medium
      line-height calc(30/20)
      color inherit

    @media desktop
      font-size fz_xxmedium
      line-height calc(30/24)


  &__description
    display none

    @media laptop
      display block
      width 346px
      margin 0 auto
      margin-bottom 60px
      font-size fz_small
      line-height calc(24/16)

    @media desktop
      width 388px
      margin-bottom 84px
      font-size fz_base
      line-height calc(28/18)


  &__btn
    position absolute
    z-index 1
    top 0
    left 0
    display block
    width 100%
    height 100%
    font-size 0
    cursor pointer
    outline none
    border none
    text-decoration none
    text-transform uppercase

    @media laptop
      display inline
      position relative
      width auto
      height auto
      padding-bottom 23px
      font-weight 500
      font-size fz_small
      line-height calc(62/16)
      letter-spacing 2.67px
      color rgba(0,0,0,0.6)
      border-bottom 4px solid rgba(0,0,0,0.6)

      &:hover
        color rgba(0,0,0,0.8)
        border-color rgba(0,0,0,0.8)



  &__img
    position absolute
    top 0
    left 0
    width 100%
    height 100%
