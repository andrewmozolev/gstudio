.navigation
  position fixed
  z-index -1
  top 0
  left 0
  display flex
  flex-direction column
  justify-content space-between
  width 270px
  min-height 100%
  padding-top 59px
  padding-left 70px
  padding-bottom 30px
  background-color #fff
  transform translateX(-100%)
  transition transform 0.3s ease-in-out

  @media tablet
    width 415px
    padding-top 80px
    padding-bottom 90px
    padding-left 100px

  @media laptop
    position static
    z-index 0
    flex-grow 1
    display block
    width auto
    transform translateX(0)
    min-height auto
    padding 0
    background-color transparent

  &--open
    transform translateX(0)


  &__list
    margin 0
    padding 0
    padding-top 25px
    padding-bottom 25px
    list-style none

    @media tablet
      padding-top 50px
      padding-bottom 50px

    @media laptop
      display flex
      justify-content flex-start
      align-items center
      padding 0

  &__item
    margin-bottom 28px

    &:last-child
      margin-bottom 0

    @media tablet
      &--calc
        display none

    @media laptop
      margin-bottom 0
      margin-right 50px


  &__link
    display inline-block
    vertical-align top
    font-size fz_xssmall
    line-height calc(28/15)
    letter-spacing 2.19px
    color inherit
    text-decoration none
    text-transform uppercase

    &:hover
      opacity 0.7

    &:active
      opacity 0.5

    @media tablet
      font-size fz_xxmedium
      line-height calc(52/24)
      letter-spacing 3.5px

    @media laptop
      font-size fz_xssmall
      letter-spacing 0
      text-transform none

    @media desktop
      font-size fz_base


  &__social
    font-size fz_xsmall
    line-height calc(24/14)
    color #000

    &:hover
      opacity 0.7

    &:active
      opacity 0.5

    @media tablet
      display none


  &__contacts
    display none
    font-size fz_small
    line-height calc(20/16)
    font-weight 500

    @media tablet
      display block

    @media laptop
      display none
