.clients
  padding-top 30px
  padding-bottom 20px
  background-color #fff

  @media tablet
    padding-bottom 44px

  @media laptop
    padding-bottom 50px

  @media desktop
    padding-bottom 60px


  &__title
    width 240px
    margin 0 auto
    margin-bottom 30px
    text-align center
    text-transform uppercase
    font-weight 300
    font-size fz_small
    line-height calc(22/16)
    letter-spacing 2.33px

    @media tablet
      width auto
      font-size fz_xxmedium
      line-height calc(62/24)
      letter-spacing 3.5px

    @media desktop
      font-size fz_large
      line-height calc(62/36)
      letter-spacing 5.25px


  &__wrap
    position relative
    height 60px
    overflow hidden

    &--touch
      overflow-x scroll

    @media tablet
      height 113px

    @media desktop
      height 150px


  &__list
    position absolute
    display flex
    justify-content space-between
    align-items center
    margin 0
    padding-left 20px
    padding-right 20px
    list-style none
    transition left 0.3s ease-out


  &__item
    margin-right 38px

    &:last-child
      margin-right 0

    @media tablet
      margin-right 75px

    @media desktop
      margin-right 100px
